<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<!--Importando Sweet Alert 2-->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.32/dist/sweetalert2.all.min.js"></script>
<!--Eliminar, Cancelar, Editar,  Gasto/Paciente-->
<script>
    function AlertMsjOk(title) {
        Swal.fire
            (
                {
                    position: 'center',
                    icon: 'success',
                    title: title,
                    showConfirmButton: false,
                    timer: 3000
                }
            )
    }
</script>

<br><br>
<div class="container">
    <div class="login-width">
        <div class="col-md- col-lg-5 mx-auto">
            <center>
                <h2 style="color: rgb(50,50,50); font-size: 40px;">
                    Editar Paciente
                </h2>
            {{#each ViewPaciente}}
            <h3 class="card-subtitle mb-2 text-muted">{{first_name}} {{last_name}} - {{age}} Años</h3>
            <hr>
            </center>
            <form action="" method="POST">
                <br>
                    <div class="row">
                    <p class="card-subtitle mb-2 text-muted"><b>Nombre: </b> <input type="text" name="first_name"  rows="4" value="{{first_name}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Apellido: </b> <input type="text" name="last_name"  rows="4" value="{{last_name}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Cédula: </b> <input type="text" name="id_doc"  rows="4" value="{{id_doc}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Seguro Social: </b> <input type="text" name="ss_doc"  rows="4" value="{{ss_doc}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Fecha Naciemiento: </b> <input type="date" name="brth_dte"  rows="4" value="{{moment brth_dte format="YYYY-MM-DD"}}"></p>
                    <hr>
                    <p class="card-subtitle mb-2 text-muted"><b>Lugar de Trabajo: </b> <input type="text" name="workplace"  rows="4" value="{{workplace}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Ocupación: </b> <input type="text" name="ocupation"  rows="4" value="{{ocupation}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Dirección: </b> <input type="text" name="address_dir"  rows="4" value="{{address_dir}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Teléfono: </b> <input type="text" name="phone"  rows="4" value="{{phone}}"></p>
                    <p class="card-subtitle mb-2 text-muted"><b>Correo: </b> <input type="text" name="email"  rows="4" value="{{email}}"></p>
                    <hr>
                    <p class="card-subtitle mb-2 text-muted"><b>Tratamiento Médico: </b>
                    <select name="treatment" id="treatment" required="required">
                        <option value={{treatment}} selected>{{treatment_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>
                    </select>
                    </p>
                    <p class="card-subtitle mb-2 text-muted"><b>Alergia: </b>
                    <select name="allergy" id="allergy" required="required">
                    <option value={{allergy}} selected>{{allergy_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>    
                    </select> 
                    </p>
                    <p class="card-subtitle mb-2 text-muted"><b>Asma: </b>
                    <select name="asthma" id="asthma" required="required">
                    <option value={{asthma}} selected>{{asthma_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>
                    </select>
                    </p>
                    <p class="card-subtitle mb-2 text-muted"><b>Diabetes: </b>
                    <select name="diabts" id="diabts" required="required">
                    <option value={{diabts}} selected>{{diabts_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>
                    </select>
                    </p>
                    <p class="card-subtitle mb-2 text-muted"><b>Hipertensión: </b> 
                    <select name="hypert" id="hypert" required="required">
                        <option value={{hypert}} selected>{{hypert_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>
                    </select>
                    </p>
                    <p class="card-subtitle mb-2 text-muted"><b>Embarazo: </b>
                    <select name="pregncy" id="pregncy" required="required">
                    <option value={{pregncy}} selected>{{pregncy_desc}}</option>
                        <option value=0>No</option>
                        <option value=1>Si</option>
                        <option value=2>No Sabe</option>
                    </select>
                    </p>
                    <hr>
                        <button class="btn btn-success btn-block" onclick="AlertMsjOk('Paciente Actualizado!')">Guardar</button>
                    </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>
<br><br><br>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<!--Importando Sweet Alert 2-->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.32/dist/sweetalert2.all.min.js"></script>
<!--Eliminar, Cancelar, Editar,  Gasto/Paciente-->
<script>
    function AlertMsjOk(title) {
        Swal.fire
            (
                {
                    position: 'center',
                    icon: 'success',
                    title: title,
                    showConfirmButton: false,
                    timer: 3000
                }
            )
    }
</script>

<br><br>
<div class="container">
    <div class="login-width">
        <div class="col-md- col-lg-5 mx-auto">
            <center>
                <h2 style="color: rgb(50,50,50); font-size: 40px;">
                    Pagar Factura
                    <hr>
            {{#each ViewFactura}}
                    <h4 class="card-subtitle mb-2 text-muted">Factura No.{{id}}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Paciente: {{first_name}} {{last_name}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Fecha: {{moment add_dte format="DD-MMMM-YYYY"}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Hora: {{moment add_dte format="h:mm a"}}</h6>
                    <hr>
                    <h6 class="card-subtitle mb-2 text-muted">Cuotas: {{cuotas}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Monto: {{toFixed amount 2}}$</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Abonado: {{toFixed payment 2}}$</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Facturado por: {{usuario}}</h6>
                    <hr>
                    <h5 class="card-subtitle mb-2 text-muted">Expediente: {{#if record}} #{{record}} {{else}}---{{/if}}</h5>
                    <br>
                    <h5 class="card-subtitle mb-2 text-muted">Tratamiento: </h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{#if treatment}} {{treatment}} {{else}}----------{{/if}}</h6>
            <hr>
            {{#if record}}
            <form action="" method="POST">
                <br>
                <div class="form-group">
                    <select name="paymtype" id="paymtype" required="required" class="form-control" style="text-align: center;">
                        <option value="">--Seleccione el Tipo de Pago--</option> 
                        <option value=1>Efectivo</option>
                        <option value=2>Cheque</option>
                        <option value=3>Transferencia</option>
                        <option value=4>Yappy</option>
                    </select>
                </div>
                <br>
                <div class="form-group">
                <input type="number" name="payment" min="1" max="999999" step="any" class="form-control" placeholder="$Pago" style="text-align: center;">
              </div>
                <br><br>
                <div class="row">
                    <button class="btn btn-success btn-block" onclick="AlertMsjOk('¡Pago Realizado!')">Pagar</button>
                </div>
            </form>
            </center>
            {{else}}
              <center>
              <div class="card" style="width: 18rem;">
                <div class="card-body"  style="color:rgb(200, 0, 0)">
                    <h5 class="card-title">Sin Expediente</h5>
                    <p class="card-text">
                      Esta factura aún no tiene vinculado un expediente, No se le puede realizar pago.
                    </p>
                </div>
              </div>
              </center>
            {{/if}}
        {{/each}} <br><br>
        </div>
    </div>
</div>
<!--Funciones Sweet Alert-->
<!--Usuario Registrado-->
<script>
function AlertMsjOk(title) 
{
	Swal.fire
  (
    {
      position: 'center',
      icon: 'success',
      title: title,
      showConfirmButton: false,
      timer:3000
    }
  )
}
</script>

<br><br>
<body>
    <!-- Background image for card set in CSS! -->
<div>
    <div class="container">
        <div class="col-md- col-lg-8 mx-auto">
            <div class="col-md- col-lg-5 mx-auto">
                <center>
                    <img src="/img/clinicapp_logo.png" alt="Logo RV" width=" 200px" height="200px">
               </center>
                <h2 class="login-heading mb-4" style="text-align: center; color:rgb(50, 50, 50); font-size: 25px">REGISTRO DE USUARIO</h2>
                <form action="/req/signup" method="POST">
                    <div class="row">
                        <input type="text" name="username" placeholder="Usuario" class="form-control">
                    </div>
                     <br>
                    <div class="row">
                        <input type="password" name="password" placeholder="Constraseña" class="form-control">
                    </div>
                     <br>
                    <div class="row">
                        <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                    </div>
                    <br>
                    <div class="row">
                        <input type="text" name="apellido" placeholder="Apellido" class="form-control">
                    </div>
                     <br>
                    <div class="row">
                        <input type="text" name="Documento" placeholder="Cédula / Pasaporte" class="form-control">
                    </div>
                     <br>
                    <div class="row">
                        <select name="Rol" id="Rol" required="required" class="form-control">                 
                            <option value="">--Tipo de usuario--</option>
                            <option value=1>Administrativo</option>
                            <option value=2>Usuario</option>
                            <option value=3>Paciente</option>
                        </select>
                    </div>
                    <br>
                    <div class="row">
                        <button class="btn btn-success btn-block" style="FONT-SIZE: 14pt;" onclick="AlertMsjOk('¡Usuario Registrado!')">Registrarse</button>
                    </div>
                    <br>
                    <div class="mb-3">
                        <a href="/" class="btn btn-info d-block" style="FONT-SIZE: 14pt; COLOR: #ffffff">Volver</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
